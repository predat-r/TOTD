//prisma configuration and database schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id       String    @id
  username String    @unique
  thoughts Thought[] //array of thoughts
  likes  Like[]  //likes on others thoughts
}

//singular thought entity
model Thought {
  thoughtId Int      @id @default(autoincrement())
  content   String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String    //id of User that created this thought
  likes    Like[]   //array of likes for this thought
  createdAt DateTime @default(now())

}
//Likes on thoughts
model Like {
  id        Int      @id @default(autoincrement())
  thoughtId Int    //thought on which this like was made
  userId    String     //user who made this like
  thought   Thought  @relation(fields: [thoughtId], references: [thoughtId])
  user      User     @relation(fields: [userId], references: [id])
}
